<div id="teams_dialog" class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title team_title"> Add Team </h3>
      </div>
      <div class="modal-body">
        <%= text_field_tag :name, nil , placeholder: 'Enter team name', class: 'team_name' %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary create_team">Create</button>
        <button type="button" class="btn btn-secondary cancel" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
